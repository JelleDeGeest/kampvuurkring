# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=scouts_production
POSTGRES_PORT=5432

# Payload CMS Configuration
PAYLOAD_SECRET=your_payload_secret_key_here
PAYLOAD_PUBLIC_SERVER_URL=https://your-domain.com
NEXT_PUBLIC_SERVER_URL=https://your-domain.com

# Draft Mode (for content preview)
PAYLOAD_PUBLIC_DRAFT_SECRET=your_draft_secret_here
NEXT_PUBLIC_DRAFT_SECRET=your_draft_secret_here

# Revalidation (for Next.js ISR)
REVALIDATION_KEY=your_revalidation_key_here
NEXT_PRIVATE_REVALIDATION_KEY=your_private_revalidation_key_here

# Supabase Configuration (if using Supabase features)
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Port Configuration
PORT=3000
STUDIO_PORT=54323

# Node Environment
NODE_ENV=production 