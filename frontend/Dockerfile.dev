FROM node:18-alpine

# Install dependencies needed to build sharp
RUN apk add --no-cache \
  python3 \
  make \
  g++ \
  vips-dev

WORKDIR /app

COPY package.json pnpm-lock.yaml ./

# Install pnpm and enable it
RUN corepack enable && corepack prepare pnpm@latest --activate

# Set sharp install options to build from source with musl
ENV npm_config_platform=linux \
    npm_config_arch=arm64 \
    npm_config_libc=musl \
    SHARP_IGNORE_GLOBAL_LIBVIPS=true

# ðŸ‘‡ This will now allow sharp to be built from source
RUN pnpm install

# Explicitly rebuild sharp for the correct architecture
RUN npm rebuild sharp --platform=linux --arch=arm64 --libc=musl

COPY . .

ENV NODE_ENV=development
ENV PORT=3000
ENV PATH="/app/node_modules/.bin:${PATH}"

EXPOSE 3000

CMD ["pnpm", "dev"]